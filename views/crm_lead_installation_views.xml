<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_crm_lead_form_add_install_button" model="ir.ui.view">
    <field name="name">crm.lead.form.add.install.button</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='build_notes']/group" position="inside">
        <button name="action_schedule_installation"
                string="Schedule Installation"
                type="object"
                class="btn btn-primary"
                attrs="{'invisible': [('probability', '&lt;', 100)]}"
                context="{'default_opportunity_id': active_id}"/>
      </xpath>
    </field>
  </record>
</odoo>